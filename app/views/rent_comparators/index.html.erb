<div class="centered">
  <h1>Airbnb Rental Comparator</h1>
  <%= form_tag rent_comparators_path, :method => :get do %>
      <p>
        <%= label_tag(:q, "Address:") %>
        <%= text_field_tag :address, params[:address],:id => 'geo-input' %>

        <%= label_tag(:q, "Long Term Rental Income Per Month:") %>
        <%= number_field_tag(:long_term_rental_income) %>
        <%= label_tag(:q,"")%>
        <%= submit_tag "Compare with Airbnb Rental", :name => nil %>
      </p>
  <% end %>

  <% if @result.present? %>
      <%= @result %>
  <% end %>
</div>